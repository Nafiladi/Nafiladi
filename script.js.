// Utility: Get & Save to LocalStorage
const getQuizzes = () => JSON.parse(localStorage.getItem("quizzes")) || [];
const saveQuizzes = (quizzes) => localStorage.setItem("quizzes", JSON.stringify(quizzes));

let currentQuiz = [];
let currentQuestionIndex = 0;
let correctAnswers = 0;

// ğŸ“Œ Show Quiz Creation Form
function showCreateQuiz() {
    document.getElementById("quiz-container").innerHTML = `
        <h2>Create a New Quiz</h2>
        <input type="text" id="quiz-name" placeholder="Enter quiz name" />
        <input type="text" id="question" placeholder="Enter question" />
        <input type="text" id="answer" placeholder="Enter answer" />
        <button onclick="addQuestion()">â• Add Question</button>
        <button onclick="saveQuiz()">ğŸ’¾ Save Quiz</button>
    `;
}

// ğŸ“Œ Add Questions Dynamically
function addQuestion() {
    const question = document.getElementById("question").value.trim();
    const answer = document.getElementById("answer").value.trim();

    if (!question || !answer) {
        alert("âŒ Please enter both question and answer.");
        return;
    }

    currentQuiz.push({ question, answer });
    alert("âœ… Question added!");
    document.getElementById("question").value = "";
    document.getElementById("answer").value = "";
}

// ğŸ“Œ Save Quiz to LocalStorage
function saveQuiz() {
    const quizName = document.getElementById("quiz-name").value.trim();
    if (!quizName || currentQuiz.length === 0) {
        alert("âŒ Enter a name and add at least one question.");
        return;
    }

    let quizzes = getQuizzes();
    quizzes.push({ name: quizName, questions: currentQuiz });
    saveQuizzes(quizzes);

    alert("âœ… Quiz saved successfully!");
    currentQuiz = [];
    showLobby();
}

// ğŸ“Œ Display Available Quizzes
function showLobby() {
    const quizzes = getQuizzes();
    let lobbyHtml = "<h2>ğŸ“‹ Available Quizzes</h2>";

    if (quizzes.length === 0) {
        lobbyHtml += "<p>No quizzes available. Create one!</p>";
    } else {
        quizzes.forEach((quiz, index) => {
            lobbyHtml += `
                <div class="quiz-card">
                    <h3>${quiz.name}</h3>
                    <button onclick="startQuiz(${index})">â–¶ Start Quiz</button>
                    <button onclick="deleteQuiz(${index})" style="background:red;">ğŸ—‘ Delete</button>
                </div>
            `;
        });
    }

    document.getElementById("quiz-lobby").innerHTML = lobbyHtml;
}

// ğŸ“Œ Delete a Quiz
function deleteQuiz(index) {
    let quizzes = getQuizzes();
    quizzes.splice(index, 1);
    saveQuizzes(quizzes);
    showLobby();
}

// ğŸ“Œ Start Quiz with Progress Tracking
function startQuiz(index) {
    const quizzes = getQuizzes();
    const quiz = quizzes[index];

    if (!quiz) {
        alert("Quiz not found!");
        return;
    }

    currentQuestionIndex = 0;
    correctAnswers = 0;
    askQuestion(quiz);
}

// ğŸ“Œ Handle Quiz Questions
function askQuestion(quiz) {
    if (currentQuestionIndex >= quiz.questions.length) {
        alert(ğŸ‰ Quiz Completed! You scored ${correctAnswers} / ${quiz.questions.length});
        showLobby();
        return;
    }

    const questionObj = quiz.questions[currentQuestionIndex];
    const userAnswer = prompt(${questionObj.question}\n(Type your answer below));

    if (userAnswer && userAnswer.trim().toLowerCase() === questionObj.answer.toLowerCase()) {
        correctAnswers++;
        alert("âœ… Correct!");
    } else {
        alert(âŒ Wrong! Correct answer: ${questionObj.answer});
    }

    currentQuestionIndex++;
    askQuestion(quiz);
}

// ğŸ“Œ Initialize on Page Load
window.onload = () => {
    showLobby();
};
